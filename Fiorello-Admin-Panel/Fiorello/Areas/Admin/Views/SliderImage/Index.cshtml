@model List<SliderImage>
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <a class="btn btn-primary" asp-action="CreateMulti">Create Multi</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sliderImage in Model)
                            {
                                <tr>
                                    <td><img src="~/img/@sliderImage.Url"></td>
                                    <td>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@sliderImage.Id">Update</a>                                        
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@sliderImage.Id">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>