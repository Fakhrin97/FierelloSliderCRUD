@model Slider
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <p class="card-description">
                    Add class <code>.table</code>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Sub-Title</th>
                                <th>Img</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.Raw(Model.Title)</td>
                                <td>@Html.Raw(Model.Subtitle)</td>
                                <td><img src="~/img/@Model.ImgUrl" /></td>
                                <td>
                                    <a class="btn btn-success" asp-action="update" >Update</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>